<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_request_order_form_inherit_submit_sro" model="ir.ui.view">
        <field name="name">stock.request.order.inherit.submit.sroy</field>
        <field name="model">stock.request.order</field>
        <field name="inherit_id" ref="stock_request.stock_request_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="groups">stock_request_multicomapny.group_stock_req_confirm_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_custom_submitted" string="Submit" type="object" attrs="{'invisible': ['|', ('custom_stock_request_order_submitted', '=', True), ('state', '=', 'cancel')]}"/>
            </xpath>
            
            <xpath expr="//div[@name='button_box']" position="after">
                <div class="text-center bg-info" attrs="{'invisible': [('custom_stock_request_order_submitted', '=', False)]}"><h2 style="color:#1f5d6b;">Stock Request Order has been Submitted </h2></div>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="custom_stock_request_order_submitted"/>
            </xpath>
        </field>
    </record>

</odoo>
