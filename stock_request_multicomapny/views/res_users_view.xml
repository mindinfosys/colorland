<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_users_form_inherit_inventory_multicompany" model="ir.ui.view">
        <field name="name">res.users.form.inherit.inventory.multicomany</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group" position="after">
                <group string="Inventory Multi Copanies">
                    <field name="custom_inventory_allowed_companies" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
